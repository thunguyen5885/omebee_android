<com.omebee.android.layers.ui.components.CarouselLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.omebee.android.layers.ui.components.viewpager.JazzyViewPager
        android:id="@+id/jazzy_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.omebee.android.layers.ui.components.CarouselIndicatorLayout
        android:id="@+id/carouselIndicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"/>

</com.omebee.android.layers.ui.components.CarouselLayout>
