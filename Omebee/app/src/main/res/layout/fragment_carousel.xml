<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.omebee.android.layers.ui.components.views.util.CarouselLayout
        android:id="@+id/carouselLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_margin="5dp"
        >
        <com.omebee.android.layers.ui.components.views.viewpager.JazzyViewPager
            android:id="@+id/jazzy_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
        <com.omebee.android.layers.ui.components.views.util.CarouselIndicatorLayout
            android:id="@+id/carouselIndicatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            />

    </com.omebee.android.layers.ui.components.views.util.CarouselLayout>
</FrameLayout>