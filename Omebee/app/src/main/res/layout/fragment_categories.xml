<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.omebee.android.layers.ui.components.views.util.ExpandableHeightGridView
        android:id="@+id/gvCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:background="@color/staggered_grid_bg"
        android:padding="@dimen/gridview_item_spacing"
        android:horizontalSpacing="@dimen/gridview_item_spacing"
        android:verticalSpacing="@dimen/gridview_item_spacing"/>
    <com.omebee.android.layers.ui.components.LoadAndRefreshLayout
        android:id="@+id/loadAndRefreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>